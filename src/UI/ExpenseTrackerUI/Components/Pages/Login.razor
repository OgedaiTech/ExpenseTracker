@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer
@attribute [AllowAnonymous]
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@inject ITokenStorageService TokenStorage
@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration
@using System.Security.Claims
@using ExpenseTrackerUI.Services
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.IdentityModel.Tokens.Jwt

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Login</h3>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin" FormName="LoginForm">
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <InputText id="emailInput" class="form-control" @bind-Value=@loginModel!.Email />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value=@loginModel!.Password />
            </div>
            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">@(isLoading ? "Logging in..." :
                                "Login")</button>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private LoginModel? loginModel { get; set; }
    private string errorMessage = string.Empty;
    private bool isLoading = false;

    protected override void OnInitialized()
    {
        loginModel ??= new();
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var request = new { Email = loginModel!.Email, Password = loginModel.Password };
            var response = await httpClient.PostAsJsonAsync($"{Configuration["ApiBaseUrl"]}/users/login", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<TokenResponse>();

                if (result is not null)
                {
                    // Store tokens
                    await TokenStorage.StoreTokensAsync(result.AccessToken, result.RefreshToken);

                    // Parse JWT to get claims
                    var handler = new JwtSecurityTokenHandler();
                    var jwtToken = handler.ReadJwtToken(result.AccessToken);

                    var claims = new List<Claim>
{
new Claim(ClaimTypes.Name, loginModel!.Email),
new Claim(ClaimTypes.Email, loginModel!.Email)
};

                    // Add claims from JWT
                    var userId = jwtToken.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
                    if (userId is not null)
                    {
                        claims.Add(new Claim(ClaimTypes.NameIdentifier, userId));
                    }

                    var tenantId = jwtToken.Claims.FirstOrDefault(c => c.Type == "TenantId")?.Value;
                    if (tenantId is not null)
                    {
                        claims.Add(new Claim("TenantId", tenantId));
                    }

                    // Add roles
                    var roles = jwtToken.Claims.Where(c => c.Type == ClaimTypes.Role);
                    claims.AddRange(roles);

                    var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
                    var principal = new ClaimsPrincipal(identity);

                    var authProperties = new AuthenticationProperties
                    {
                        IsPersistent = false,
                        ExpiresUtc = DateTimeOffset.UtcNow.AddSeconds(result.ExpiresIn)
                    };

                    await HttpContextAccessor.HttpContext!.SignInAsync(
                    CookieAuthenticationDefaults.AuthenticationScheme,
                    principal,
                    authProperties);

                    Navigation.NavigateTo("/", true);
                }
            }
            else
            {
                errorMessage = "Invalid email or password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}