@page "/set-password"
@layout EmptyLayout
@attribute [AllowAnonymous]
@rendermode InteractiveServer

@using ExpenseTrackerUI.Services.Authentication
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation
@inject AuthService AuthService

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Set Your Password</h3>

        @if (!string.IsNullOrEmpty(initialErrorMessage))
        {
            <div class="alert alert-danger">
                @initialErrorMessage
                <br />
                <a href="/login" class="alert-link">Go to Login</a>
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="@setPasswordModel" OnValidSubmit="@HandleSetPassword" FormName="SetPasswordForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <InputText id="emailInput" class="form-control" @bind-Value="@Email" disabled="true" />
                </div>

                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <InputText id="newPassword" type="password" class="form-control" @bind-Value="@setPasswordModel!.NewPassword" />
                    <ValidationMessage For="@(() => setPasswordModel!.NewPassword)" />
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="@setPasswordModel!.ConfirmPassword" />
                    <ValidationMessage For="@(() => setPasswordModel!.ConfirmPassword)" />
                </div>

                <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                    @(isLoading ? "Setting password..." : "Set Password")
                </button>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    [SupplyParameterFromForm]
    private SetPasswordModel? setPasswordModel { get; set; }

    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private string initialErrorMessage = string.Empty;
    private bool isLoading = false;

    protected override void OnInitialized()
    {
        setPasswordModel ??= new();

        // Validate that email and token are present
        if (string.IsNullOrWhiteSpace(Email) || string.IsNullOrWhiteSpace(Token))
        {
            initialErrorMessage = "Invalid or missing password reset link. Please check your email or request a new password reset.";
        }
    }

    private async Task HandleSetPassword()
    {
        if (!string.IsNullOrWhiteSpace(initialErrorMessage))
        {
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var result = await AuthService.SetPasswordAsync(
                Email!,
                Token!,
                setPasswordModel!.NewPassword,
                setPasswordModel!.ConfirmPassword
            );

            if (result.IsSuccess)
            {
                successMessage = "Password set successfully! Redirecting to login...";
                StateHasChanged();

                // Wait 2 seconds to show success message before redirecting
                await Task.Delay(2000);
                Navigation.NavigateTo("/login", replace: true);
            }
            else
            {
                // Map specific error codes to user-friendly messages
                errorMessage = result.ErrorCode switch
                {
                    "INVALID_TOKEN" => "Invalid or expired link. Please request a new password reset.",
                    "PASSWORD_MISMATCH" => "Passwords do not match.",
                    "USER_DEACTIVATED" => "Account is deactivated. Please contact support.",
                    "INVALID_REQUEST" => "Invalid request. Please check all fields and try again.",
                    _ => result.ErrorMessage ?? "An error occurred while setting your password. Please try again."
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class SetPasswordModel
    {
        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters long")]
        public string NewPassword { get; set; } = string.Empty;

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare(nameof(NewPassword), ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
