@page "/expenses"
@attribute [Authorize]
@rendermode InteractiveServer

@using ExpenseTrackerUI.Services.Expense
@using Microsoft.AspNetCore.Components
@inject ExpenseService ExpenseService
@inject NavigationManager Navigation


<h3>My Expenses</h3>

@if (expenses == null)
{
    <p>Loading...</p>
}
else if (!expenses.Any())
{
    <p>No expenses found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in expenses)
            {
                <tr>
                    <td>@expense.Name</td>
                    <td>@expense.Amount.ToString("C")</td>
                    <td>@expense.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td>@GetStatusBadge(expense.Status)</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="() => ViewReceipts(expense.Id)">
                            View
                        </button>
                        <button class="btn btn-sm btn-secondary me-2" disabled>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger" disabled>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ExpenseDto>? expenses;
    private bool hasRendered;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasRendered)
        {
            hasRendered = true;
            try
            {
                var response = await ExpenseService.GetUserExpensesAsync();
                expenses = response?.Items ?? new List<ExpenseDto>();
            }
            catch
            {
                expenses = new List<ExpenseDto>();
            }
            StateHasChanged();
        }
    }

    private void ViewReceipts(Guid expenseId)
    {
        Navigation.NavigateTo($"/expenses/{expenseId}/receipts");
    }

    private MarkupString GetStatusBadge(ExpenseStatus status)
    {
        var (badgeClass, icon, text) = status switch
        {
            ExpenseStatus.Draft => ("bg-secondary", "bi-pencil", "Draft"),
            ExpenseStatus.Submitted => ("bg-info", "bi-clock", "Submitted"),
            ExpenseStatus.Approved => ("bg-success", "bi-check-circle", "Approved"),
            ExpenseStatus.Rejected => ("bg-danger", "bi-x-circle", "Rejected"),
            _ => ("bg-secondary", "bi-question-circle", "Unknown")
        };

        return new MarkupString($"<span class=\"badge {badgeClass}\"><span class=\"{icon} me-1\"></span>{text}</span>");
    }
}