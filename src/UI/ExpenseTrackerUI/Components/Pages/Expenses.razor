@page "/expenses"
@attribute [Authorize]
@rendermode InteractiveServer

@using ExpenseTrackerUI.Services.Expense
@using Microsoft.AspNetCore.Components
@inject ExpenseService ExpenseService
@inject NavigationManager Navigation


<h3>My Expenses</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (expenses == null)
{
    <p>Loading...</p>
}
else if (!expenses.Any())
{
    <p>No expenses found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in expenses)
            {
                <tr>
                    <td>@expense.Name</td>
                    <td>@expense.Amount.ToString("C")</td>
                    <td>@expense.CreatedAt.ToString("dd/M/yyyy")</td>
                    <td>@GetStatusBadge(expense.Status)</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="() => ViewReceipts(expense.Id)">
                            View
                        </button>
                        <button class="btn btn-sm btn-secondary me-2" @onclick="() => ShowEditExpenseModal(expense)"
                                disabled="@(!CanEditExpense(expense))">
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteExpense(expense.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<EditExpenseModal @ref="editExpenseModal" OnExpenseUpdated="HandleExpenseUpdated" />

@code {
    private List<ExpenseDto>? expenses;
    private bool hasRendered;
    private string? errorMessage;
    private string? successMessage;
    private EditExpenseModal? editExpenseModal;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasRendered)
        {
            hasRendered = true;
            try
            {
                var response = await ExpenseService.GetUserExpensesAsync();
                expenses = response?.Items ?? new List<ExpenseDto>();
            }
            catch
            {
                expenses = new List<ExpenseDto>();
            }
            StateHasChanged();
        }
    }

    private void ViewReceipts(Guid expenseId)
    {
        Navigation.NavigateTo($"/expenses/{expenseId}/receipts");
    }

    private MarkupString GetStatusBadge(ExpenseStatus status)
    {
        var (badgeClass, icon, text) = status switch
        {
            ExpenseStatus.Draft => ("bg-secondary", "bi-pencil", "Draft"),
            ExpenseStatus.Submitted => ("bg-info", "bi-clock", "Submitted"),
            ExpenseStatus.Approved => ("bg-success", "bi-check-circle", "Approved"),
            ExpenseStatus.Rejected => ("bg-danger", "bi-x-circle", "Rejected"),
            _ => ("bg-secondary", "bi-question-circle", "Unknown")
        };

        return new MarkupString($"<span class=\"badge {badgeClass}\"><span class=\"{icon} me-1\"></span>{text}</span>");
    }

    private async void DeleteExpense(Guid expenseId)
    {
        var response = await ExpenseService.DeleteExpenseAsync(expenseId);
        if (response.Success)
        {
            expenses = expenses?.Where(e => e.Id != expenseId).ToList();
            StateHasChanged();
        }
        else
        {
            errorMessage = response.Message;
            StateHasChanged();
        }
    }

    private bool CanEditExpense(ExpenseDto expense)
    {
        return expense.Status == ExpenseStatus.Draft || expense.Status == ExpenseStatus.Rejected;
    }

    private async Task ShowEditExpenseModal(ExpenseDto expense)
    {
        if (editExpenseModal != null)
        {
            await editExpenseModal.Show(expense);
        }
    }

    private async Task HandleExpenseUpdated(UpdateExpenseResponse result)
    {
        successMessage = $"Expense '{result.Name}' updated successfully.";

        // Update the expense in the local list
        var expenseToUpdate = expenses?.FirstOrDefault(e => e.Id == result.Id);
        if (expenseToUpdate != null)
        {
            // Create a new ExpenseDto with updated values
            var updatedExpense = expenseToUpdate with
            {
                Name = result.Name,
                Status = result.Status
            };

            // Replace in list
            var index = expenses!.IndexOf(expenseToUpdate);
            expenses[index] = updatedExpense;

            StateHasChanged();
        }
        else
        {
            // Fallback: reload if expense not found (edge case)
            try
            {
                var response = await ExpenseService.GetUserExpensesAsync();
                expenses = response?.Items ?? new List<ExpenseDto>();
            }
            catch
            {
                expenses = new List<ExpenseDto>();
            }
            StateHasChanged();
        }
    }
}