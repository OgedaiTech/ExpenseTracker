@page "/expenses/{ExpenseId:guid}/receipts"
@attribute [Authorize]
@rendermode InteractiveServer

@using ExpenseTrackerUI.Services.Receipt
@using ExpenseTrackerUI.Services.Expense
@using ExpenseTrackerUI.Components.Shared
@inject ReceiptService ReceiptService
@inject ExpenseService ExpenseService
@inject NavigationManager Navigation

<SubmitExpenseModal @ref="submitExpenseModal" OnExpenseSubmitted="HandleExpenseSubmitted" />

<div class="mb-3">
    <button class="btn btn-secondary" @onclick="NavigateBack">
        <span class="bi bi-arrow-left"></span> Back to Expenses
    </button>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (expense == null || receipts == null)
{
    <p>Loading...</p>
}
else
{
    <!-- Expense Details Section -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@expense.Name</h4>
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Amount:</strong> @expense.Amount.ToString("C")</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1"><strong>Date:</strong> @expense.CreatedAt.ToString("MM/dd/yyyy")</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    @if (CanSubmitExpense())
                    {
                        <button class="btn btn-success" @onclick="ShowSubmitModal">
                            <span class="bi bi-send me-1"></span> Submit for Approval
                        </button>
                    }
                    else if (expense.Status == ExpenseStatus.Submitted)
                    {
                        <span class="badge bg-info">
                            <span class="bi bi-clock me-1"></span> Pending Approval
                        </span>
                    }
                    else if (expense.Status == ExpenseStatus.Approved)
                    {
                        <span class="badge bg-success">
                            <span class="bi bi-check-circle me-1"></span> Approved
                        </span>
                    }
                    else if (expense.Status == ExpenseStatus.Rejected)
                    {
                        <span class="badge bg-danger">
                            <span class="bi bi-x-circle me-1"></span> Rejected
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Receipts Table Section -->
    <h5>Receipts</h5>

    @if (!receipts.Any())
    {
        <p class="text-muted">No receipts found for this expense.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Receipt No</th>
                    <th>Vendor</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receipt in receipts)
                {
                    <tr>
                        <td>@receipt.ReceiptNo</td>
                        <td>@receipt.Vendor</td>
                        <td>@receipt.Date.ToString("MM/dd/yyyy")</td>
                        <td>@receipt.Amount.ToString("C")</td>
                        <td>@receipt.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-primary me-2" disabled>
                                View
                            </button>
                            <button class="btn btn-sm btn-secondary me-2" disabled>
                                Edit
                            </button>
                            <button class="btn btn-sm btn-danger" disabled>
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    [Parameter]
    public Guid ExpenseId { get; set; }

    private ExpenseDto? expense;
    private List<ReceiptDto>? receipts;
    private bool hasRendered;
    private SubmitExpenseModal? submitExpenseModal;
    private string? successMessage;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasRendered)
        {
            hasRendered = true;
            try
            {
                // Fetch expense details and receipts in parallel
                var expenseTask = ExpenseService.GetExpenseByIdAsync(ExpenseId);
                var receiptsTask = ReceiptService.GetReceiptsAsync(ExpenseId);

                await Task.WhenAll(expenseTask, receiptsTask);

                var expenseResponse = await expenseTask;
                if (expenseResponse.StatusCode is HttpStatusCode.NotFound)
                {
                    Navigation.NavigateTo("/expenses");
                    return;
                }
                expense = expenseResponse.Data;

                var receiptsResponse = await receiptsTask;
                receipts = receiptsResponse?.Items ?? new List<ReceiptDto>();
            }
            catch
            {
                // Handle error - initialize empty list
                receipts = new List<ReceiptDto>();
            }
            StateHasChanged();
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/expenses");
    }

    private bool CanSubmitExpense()
    {
        return expense?.Status == ExpenseStatus.Draft || expense?.Status == ExpenseStatus.Rejected;
    }

    private async Task ShowSubmitModal()
    {
        if (submitExpenseModal != null && expense != null)
        {
            await submitExpenseModal.Show(expense.Id);
        }
    }

    private void HandleExpenseSubmitted(SubmitExpenseResponse response)
    {
        // Update expense status locally
        if (expense != null)
        {
            expense = expense with { Status = response.Status };
        }

        successMessage = $"Expense submitted successfully on {response.SubmittedAt:g}";
        StateHasChanged();
    }
}