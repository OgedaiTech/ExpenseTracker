@page "/approvals"
@attribute [Authorize(Roles = "Approver")]
@rendermode InteractiveServer

@using ExpenseTrackerUI.Services.Approval
@using Microsoft.AspNetCore.Components
@inject ApprovalService ApprovalService
@inject NavigationManager Navigation

<h3>Pending Approvals</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (pendingApprovals == null)
{
    <p>Loading...</p>
}
else if (!pendingApprovals.Any())
{
    <div class="alert alert-info">
        <span class="bi bi-info-circle me-2"></span>
        No expenses pending approval at this time.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Submitted Date</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var approval in pendingApprovals)
            {
                <tr>
                    <td>@approval.Name</td>
                    <td>@approval.Amount.ToString("C")</td>
                    <td>@approval.SubmittedAt.ToString("dd/M/yyyy HH:mm")</td>
                    <td>@approval.CreatedAt.ToString("dd/M/yyyy")</td>
                    <td>
                        <button class="btn btn-sm btn-primary"
                            @onclick="() => ViewReceipts(approval.Id, approval.CreatedByUserId)">
                            <span class="bi bi-receipt me-1"></span> View Receipts
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <small class="text-muted">
            <span class="bi bi-info-circle me-1"></span>
            Showing @pendingApprovals.Count expense(s) pending your approval
        </small>
    </div>
}

@code {
    private List<PendingApprovalDto>? pendingApprovals;
    private bool hasRendered;
    private string? errorMessage;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasRendered)
        {
            hasRendered = true;
            await LoadPendingApprovals();
            StateHasChanged();
        }
    }

    private async Task LoadPendingApprovals()
    {
        try
        {
            pendingApprovals = await ApprovalService.GetPendingApprovalsAsync();
            if (pendingApprovals == null)
            {
                pendingApprovals = new List<PendingApprovalDto>();
                errorMessage = "Failed to load pending approvals. Please try again.";
            }
        }
        catch (Exception ex)
        {
            pendingApprovals = new List<PendingApprovalDto>();
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }

    private void ViewReceipts(Guid expenseId, Guid createdByUserId)
    {
        Navigation.NavigateTo($"/approvals/{expenseId}/{createdByUserId}/receipts");
    }
}